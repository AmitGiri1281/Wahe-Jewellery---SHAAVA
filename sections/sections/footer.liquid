{%- style -%}
  /* Dynamic Colors */
  :root {
    --footer-bg: {{ section.settings.background_gradient | default: section.settings.background | default: '#ffffff' }};
    --footer-text: {{ section.settings.text_color | default: '#000000' }};
    --footer-accent: {{ section.settings.accent_color | default: '#000000' }};
  }

  /* Custom Wahe Footer */
  .wahe-custom-footer {
    background: var(--footer-bg);
    padding: 4rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .wahe-footer-content {
    max-width: min(90vw, 1200px);
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  /* Instagram Link */
  .wahe-social {
    margin-bottom: 2rem;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s 0.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .wahe-social a {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--footer-text);
    text-decoration: none;
    font-size: clamp(1rem, 1.5vw, 1.2rem);
    font-weight: 500;
    transition: all 0.4s ease;
  }

  .wahe-social a:hover {
    color: var(--footer-accent);
    transform: translateY(-2px);
  }

  .wahe-social svg {
    width: 24px;
    height: 24px;
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .wahe-social a:hover svg {
    transform: scale(1.2) rotate(-5deg);
  }

  /* Tagline */
  .wahe-tagline {
    font-style: italic;
    margin: 2rem 0;
    color: var(--footer-text);
    font-size: clamp(1.2rem, 2vw, 1.8rem);
    line-height: 1.4;
    opacity: 0;
    animation: fadeIn 1s 0.4s ease-out forwards;
  }

  /* Newsletter */
  .wahe-newsletter {
    max-width: 500px;
    margin: 3rem auto 0;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s 0.6s ease-out forwards;
  }

  .wahe-newsletter-form {
    display: flex;
    gap: 1rem;
    position: relative;
  }

  .wahe-newsletter input {
    flex: 1;
    padding: 1rem;
    border: 1px solid rgba(0,0,0,0.1);
    border-radius: 50px;
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(5px);
    transition: all 0.4s ease;
  }

  .wahe-newsletter input:focus {
    outline: none;
    border-color: var(--footer-accent);
    box-shadow: 0 0 0 2px rgba(var(--footer-accent-rgb), 0.2);
  }

  .wahe-newsletter button {
    background: var(--footer-accent);
    color: white;
    border: none;
    padding: 0 2rem;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    white-space: nowrap;
  }

  .wahe-newsletter button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }

  /* Background Elements */
  .wahe-footer-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
  }

  .wahe-footer-bg-circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(var(--footer-accent-rgb), 0.05);
    filter: blur(30px);
  }

  .wahe-footer-bg-circle:nth-child(1) {
    width: 300px;
    height: 300px;
    top: -50px;
    left: -50px;
    animation: float 15s infinite ease-in-out;
  }

  .wahe-footer-bg-circle:nth-child(2) {
    width: 200px;
    height: 200px;
    bottom: -30px;
    right: 10%;
    animation: float 12s 3s infinite ease-in-out reverse;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) translateX(0);
    }
    50% {
      transform: translateY(-20px) translateX(10px);
    }
  }

  /* Responsive Adjustments */
  @media (max-width: 750px) {
    .wahe-custom-footer {
      padding: 3rem 1.5rem;
    }
    
    .wahe-newsletter-form {
      flex-direction: column;
    }
    
    .wahe-newsletter button {
      padding: 1rem;
      width: 100%;
    }
  }
{%- endstyle -%}

